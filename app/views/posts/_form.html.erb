<%= render :partial => "shared/form_error", :locals => { :resource => @post } %>
<%= form_for @post, :html => { :id => "post-form" } do |f| %>
  <div>
    <%= f.label "Title" %>
    <%= f.text_field :title, :size => "60" %>
  </div>
  <div>
  	<%= f.label "Message" %>
  	<%= f.text_area :message, :rows => "20", :cols => "80" %>
  </div>
  <div>
    <%= f.label "Video URL" %>
    <%= f.text_field :video_url, :size => "60" %>
  <div>
  <div>
  	<%= f.label "Organization" %>
  	<%= f.text_field :organization, :size => "40" %>
  </div>
  <%= f.submit "Submit", :class => "button" %>
<% end %>